<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".RegisterActivity">

    <TextView
        android:textColor="#0088FF"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chào mừng bạn,"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Đăng kí tài khoản"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tài khoản"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_User"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:hint="Nhập tài khoản"
            android:paddingLeft="10dp"
            android:background="@drawable/edttextstyle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Mật khẩu"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_Pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:hint="Nhập mật khẩu"
            android:paddingLeft="10dp"
            android:background="@drawable/edttextstyle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Nhập lại mật khẩu"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_Retypepass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:hint="Nhập lại mật khẩu"
            android:paddingLeft="10dp"
            android:background="@drawable/edttextstyle" />
    </LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#208DE5"
        android:text="Đăng ký"
        android:textAllCaps="true"
        android:textSize="22dp"
        android:textStyle="bold" />

    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#636363"
        android:text="TRỞ VỀ"
        android:textAllCaps="true"
        android:textSize="22dp"
        android:textStyle="bold" />



</LinearLayout>